<div ...attributes>
  {{#if (or @href @route)}}
    <Hds::Interactive
      class="cut-list-item active hds-surface-mid"
      @href={{@href}}
      @isRouteExternal={{@isRouteExternal}}
      @route={{@route}}
      @isHrefExternal={{@isHrefExternal}}
      @query={{@query}}
      @replace={{@replace}}
      {{on 'click' this.onClick}}
    >
      {{yield (hash Content=(component "cut/list-item/content"))}}
      {{yield (hash Action=(component "cut/list-item/action"))}}
    </Hds::Interactive>
  {{else}}
    {{#if @onClick}}
      <div class="cut-list-item active hds-surface-mid" tabindex="0" {{on 'click' this.onClick}}>
        {{yield (hash Content=(component "cut/list-item/content"))}}
        {{yield (hash Action=(component "cut/list-item/action"))}}
      </div>
    {{else}}
      <div class="cut-list-item hds-surface-base">
        {{yield (hash Content=(component "cut/list-item/content"))}}
        {{yield (hash Action=(component "cut/list-item/action"))}}
      </div>
    {{/if}}
  {{/if}}
</div>